{
    "env": "node",
     "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "lib",
        "declaration": true
    },
    "exclude": [
        "test",
        "node_modules"
    ]
}
